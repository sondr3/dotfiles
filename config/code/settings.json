{
  "editor.fontFamily": "PragmataPro Mono Liga",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.wordWrap": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "window.autoDetectColorScheme": true,
  "workbench.colorTheme": "GitHub Light Colorblind (Beta)",
  "settingsSync.ignoredSettings": ["workbench.colorTheme"],
  "workbench.preferredDarkColorTheme": "GitHub Dark Colorblind (Beta)",
  "workbench.preferredLightColorTheme": "GitHub Light Colorblind (Beta)",
  "workbench.preferredHighContrastColorTheme": "GitHub Dark High Contrast",
  "workbench.preferredHighContrastLightColorTheme": "GitHub Light High Contrast",
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "search.showLineNumbers": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.iconTheme": "vscode-icons",
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "haskell.manageHLS": "GHCup",
  "haskell.formattingProvider": "ormolu",
  "haskell.plugin.hlint.codeActionsOn": true,
  "[haskell]": {
    "editor.defaultFormatter": "haskell.haskell"
  },
  "emmet.includeLanguages": {
    "html-eex": "html"
  },
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "[elixir]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[html-eex]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[python]": {
    "editor.formatOnType": true
  }
}
